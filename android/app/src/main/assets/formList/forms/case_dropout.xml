      <instance>
        <case_dropout id="case_dropout">
          <formhub>
            <uuid/>
          </formhub>
          <start/>
          <end/>
          <username/>
          <reg_info>
            <date/>
            <child_name_bn/>
            <child_name_en/>
            <reg_num/>
            <case_id/>
          </reg_info>
          <dropout_date/>
          <dropout_reason/>
          <dropout_reason_other/>
          <proof/>
          <comment/>
          <reminder/>
          <meta>
            <instanceID/>
          </meta>
        </case_dropout>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/case_dropout/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/case_dropout/end" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="username" nodeset="/case_dropout/username" type="string"/>
      <bind calculate="date(format-date( /case_dropout/start ,'%Y-%m-%d'))" nodeset="/case_dropout/reg_info/date" readonly="true()" required="true()" type="date"/>
      <bind nodeset="/case_dropout/reg_info/child_name_bn" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/case_dropout/reg_info/child_name_en" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/case_dropout/reg_info/reg_num" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/case_dropout/reg_info/case_id" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/case_dropout/dropout_date" required="true()" type="date"/>
      <bind nodeset="/case_dropout/dropout_reason" required="true()" type="select1"/>
      <bind nodeset="/case_dropout/dropout_reason_other" relevant="selected( /case_dropout/dropout_reason ,'99')" required="true()" type="string"/>
      <bind nodeset="/case_dropout/proof" type="select1"/>
      <bind nodeset="/case_dropout/comment" type="string"/>
      <bind nodeset="/case_dropout/reminder" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/case_dropout/meta/instanceID" readonly="true()" type="string"/>
      <bind calculate="'817a0c0e2b62438292a50fb652b83146'" nodeset="/case_dropout/formhub/uuid" type="string"/>
    </model>
